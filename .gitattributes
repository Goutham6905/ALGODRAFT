# Auto detect text files and normalize line endings to LF
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf

# TypeScript/JavaScript
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.jsx text eol=lf

# Shell
*.sh text eol=lf
*.bash text eol=lf

# Windows
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files
*.pdf binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.bin binary
